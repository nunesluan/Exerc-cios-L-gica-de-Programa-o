algoritmo "ex008"
var
   d : Real
inicio

      Escreva("Digite uma distância em metros: ")
      Leia(d)
      
      Escreval("A distância de",d,"m corresponde a: ")
      Escreval((d/1000),"km")
      Escreval((d/100),"hm")
      Escreval((d/10),"dam")
      Escreval((d*10),"dm")
      Escreval((d*100),"cm")
      Escreval((d*1000),"mm")
fimalgoritmo
